  <script src="https://unpkg.com/leaflet@1.9.3/dist/leaflet.js"></script>
  <script src="https://unpkg.com/leaflet-routing-machine@latest/dist/leaflet-routing-machine.js"></script>

  <script>
    const locais = [
      {
        nome: "R&A Lidera",
        lat: -25.0771,
        lng: -50.1412,
        endereco: "R. Rio Paraná, 112 - Chapada",
        horario: "Não atendeu",
        tel: "+55 42 99929-5248",
      },
      {
        nome: "Recisul",
        lat: -25.1067,
        lng: -50.1567,
        endereco: "R. Tobias Moscoso, 743 - Ronda",
        horario: "Horário não informado",
        tel: "+55 42 3223-3359",
      },
      {
        nome: "Sustentar Resíduos",
        lat: -25.1234,
        lng: -50.1345,
        endereco: "R. Avelino Rosa Neto, 292 - Boa Vista",
        horario: "Horário não informado",
        tel: "+55 42 93300-1181",
      },
      {
        nome: "Usina de Reciclagem",
        lat: -25.0901,
        lng: -50.1303,
        endereco: "Cará-Cará",
        horario: "Horário não informado",
        tel: "+55 42 3025-7575",
      },
      {
        nome: "Zero Resíduos",
        lat: -25.0987,
        lng: -50.1609,
        endereco: "R. Arquiteto Nicolau Ferigotti, 300 - Uvaranas",
        horario: "Talvez seja paga",
        tel: "+55 42 3220-0300",
      },
      {
        nome: "Vivo - Loja",
        lat: -25.0834,
        lng: -50.1523,
        endereco: "Av. Dr. Vicente Machado, 505",
        horario: "Seg-Sex: 09h-19h",
        tel: "(42) 99119-9292",
      },
    ];

    let map = L.map("map").setView([-25.0946, -50.1637], 13);
    L.tileLayer("https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png").addTo(map);

    const iconVerde = L.icon({
      iconUrl: "https://maps.google.com/mapfiles/ms/icons/green-dot.png",
      iconSize: [32, 32],
      iconAnchor: [16, 32],
    });
    const iconAzul = L.icon({
      iconUrl: "https://maps.google.com/mapfiles/ms/icons/blue-dot.png",
      iconSize: [32, 32],
      iconAnchor: [16, 32],
    });

    // Marcadores dos locais (verde)
    locais.forEach((loc) => {
      L.marker([loc.lat, loc.lng], { icon: iconVerde })
        .addTo(map)
        .bindPopup(
          `<strong>${loc.nome}</strong><br>${loc.endereco}<br>${loc.tel}<br>${loc.horario}`
        );
    });

    // Mostra detalhes embaixo
    const detalhes = document.getElementById("locaisDetalhes");
    locais.forEach((l) => {
      const div = document.createElement("div");
      div.className = "details";
      div.innerHTML = `<strong>${l.nome}</strong><br>Endereço: ${l.endereco}<br>Telefone: ${l.tel}<br>Horário: ${l.horario}`;
      detalhes.appendChild(div);
    });

    // Armazena rotas para remover depois
    let rotas = [];
    let marcadorUser = null;

    // Função para calcular distância em km entre duas coordenadas usando Haversine
    function calcularDistancia(lat1, lon1, lat2, lon2) {
      function toRad(x) { return (x * Math.PI) / 180; }
      var R = 6371; // km
      var dLat = toRad(lat2 - lat1);
      var dLon = toRad(lon2 - lon1);
      var a =
        Math.sin(dLat / 2) * Math.sin(dLat / 2) +
        Math.cos(toRad(lat1)) *
          Math.cos(toRad(lat2)) *
          Math.sin(dLon / 2) *
          Math.sin(dLon / 2);
      var c = 2 * Math.atan2(Math.sqrt(a), Math.sqrt(1 - a));
      var d = R * c;
      return d;
    }

    // Remove rotas existentes do mapa
    function limparRotas() {
      rotas.forEach((r) => { map.removeControl(r); });
      rotas = [];
      // Limpar div de detalhes
      const gpsDiv = document.getElementById("gps");
      gpsDiv.innerHTML = "";
    }

    // Busca e cria rotas para os locais a partir do CEP inserido
    async function buscarCEP() {
      const cep = document.getElementById("cep").value.trim();

      // Validação básica
      if (!cep || !/^\d{5}-?\d{3}$/.test(cep)) {
        alert("Digite um CEP válido no formato 00000-000");
        document.getElementById("cep").focus();
        return;
      }

      // Busca endereço pelo CEP via viacep
      try {
        const respostaCEP = await fetch(
          `https://viacep.com.br/ws/${cep.replace("-", "")}/json/`
        );
        const dadosCEP = await respostaCEP.json();

        if (dadosCEP.erro) {
          alert("CEP não encontrado.");
          return;
        }

        // Geocodifica endereço com Nominatim
        const endereco = `${dadosCEP.logradouro}, ${dadosCEP.bairro}, ${dadosCEP.localidade}, ${dadosCEP.uf}, Brasil`;
        const respostaGeo = await fetch(
          `https://nominatim.openstreetmap.org/search?format=json&q=${encodeURIComponent(endereco)}`
        );
        const dadosGeo = await respostaGeo.json();

        if (!dadosGeo || dadosGeo.length === 0) {
          alert("Não foi possível localizar seu endereço no mapa.");
          return;
        }

        const latUser = parseFloat(dadosGeo[0].lat);
        const lngUser = parseFloat(dadosGeo[0].lon);

        // Centraliza mapa no usuário
        map.setView([latUser, lngUser], 13);

        // Remove marcador antigo do usuário
        if (marcadorUser) { map.removeLayer(marcadorUser); }

        // Adiciona marcador do usuário
        marcadorUser = L.marker([latUser, lngUser], { icon: iconAzul })
          .addTo(map).bindPopup("Sua localização").openPopup();

        // Limpa rotas anteriores
        limparRotas();

        // Ordena locais pela distância ao usuário
        const locaisOrdenados = locais
          .map((loc) => ({
            ...loc,
            distancia: calcularDistancia(latUser, lngUser, loc.lat, loc.lng),
          }))
          .sort((a, b) => a.distancia - b.distancia);

        // Cores bem distintas para cada rota
        const coresRotas = ["#e53935", "#1e88e5", "#43a047", "#fb8c00", "#8e24aa", "#00acc1"];

        // Para cada local, cria rota e detalhes
        locaisOrdenados.forEach((local, index) => {
          const rota = L.Routing.control({
            waypoints: [
              L.latLng(latUser, lngUser),
              L.latLng(local.lat, local.lng),
            ],
            lineOptions: {
              styles: [{ color: coresRotas[index % coresRotas.length], weight: 5 }],
            },
            addWaypoints: false,
            routeWhileDragging: false,
            draggableWaypoints: false,
            fitSelectedRoutes: true,
            createMarker: () => null,
            showAlternatives: false,
            show: false,
          }).addTo(map);

          rotas.push(rota);

          // Cria box com detalhes da rota
          const gpsDiv = document.getElementById("gps");
          const divDetalhes = document.createElement("div");
          divDetalhes.className = "leaflet-routing-container";
          divDetalhes.style.borderColor = coresRotas[index % coresRotas.length];
          divDetalhes.innerHTML = `
            <h2>Rota para ${local.nome}</h2>
            <p><strong>Endereço:</strong> ${local.endereco}</p>
            <p><strong>Telefone:</strong> ${local.tel}</p>
            <p><strong>Horário:</strong> ${local.horario}</p>
          `;
          gpsDiv.appendChild(divDetalhes);
        });
      } catch (error) {
        alert("Erro ao buscar localização. Verifique sua conexão e tente novamente.");
        console.error(error);
      }
    }

    // Troca de seções no menu principal
    function showSection(id, event) {
      document.querySelectorAll("section").forEach((sec) => {
        sec.classList.remove("active");
      });
      document.getElementById(id).classList.add("active");

      document.querySelectorAll("nav button").forEach((btn) => {
        btn.classList.remove("active");
      });
      event.target.classList.add("active");
    }

    // Playlists de vídeos para reutilização (mantidas)
    const playlists = {
      celular: [
        "https://www.youtube.com/embed/7PImDKq0N7Q",
        "https://www.youtube.com/embed/dgmlmfXgkQo",
      ],
      monitor: [
        "https://www.youtube.com/embed/8-L-qgnjZkg",
        "https://www.youtube.com/embed/ckkXgYqCz1g",
      ],
      tablet: [
        "https://www.youtube.com/embed/PKztKZYc1G0",
